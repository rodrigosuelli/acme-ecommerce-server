{
  "kind": "collectionType",
  "collectionName": "pedidos",
  "info": {
    "singularName": "pedido",
    "pluralName": "pedidos",
    "displayName": "Pedido",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "nao_pago",
        "pago",
        "processando",
        "enviado",
        "concluido"
      ],
      "required": true,
      "default": "nao_pago"
    },
    "valor_total": {
      "type": "decimal",
      "required": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "pedidos"
    },
    "valor_frete": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "produtos": {
      "type": "component",
      "repeatable": true,
      "component": "pedido.item-pedido",
      "required": true
    }
  }
}
